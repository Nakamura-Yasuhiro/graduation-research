    <%= javascript_include_tag 'videos.js' %>
      <%= stylesheet_link_tag    'videos' %>
<div>
  <h1><%= @video.title %></h1>
</div>

<div class="video-sentence">
  <p><%= @video.body %></p>
</div>
<div id="nicoscreen">
  <iframe width="100%" height="576" src="<%= @video.video.to_s %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<input type="text" id="comment_text">
<button id="comment_button" class="btn btn-secondary">コメント</button>

<div>
  <%= link_to '削除', @post, method: :delete, data: { confirm: '削除しますか?' } %>
</div>

<div id="comment_list">
  <ul id="list" class="list-group">
  </ul>
</div>
