<html>
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Yasuhiro's Portfolio</title>
  <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'users' %>
      <%= stylesheet_link_tag    'normalize'%>
        <%= javascript_include_tag 'users.js' %>
            <%= javascript_pack_tag 'user' %>
</head>
<body>
  <div class=show>
    <div class="header-logo">
      <%= link_to("＞BUSINESS WEBSITE", "/top") %>
    </div>


<div id="user">
<template>
  <v-card
    class="mx-auto"
    max-width="644"
    tile
  >
    <v-img
      height="100%"
      src="/assets/server-room.jpg"
    >
      <v-row
        align="end"
        class="fill-height"
      >
        <v-col
          align-self="start"
          class="pa-0"
          cols="12"
        >
          <v-avatar
            class="profile"
            color="grey"
            size="164"
            tile
          >
            <v-img src="<%= " /user_images/#{@user.image_name} " %>"></v-img>
          </v-avatar>
        </v-col>
        <v-col class="py-0">
          <v-list-item
            color="rgba(0, 0, 0, .4)"
            dark
          >
            <v-list-item-content>
              <v-list-item-title class="title">
                <%= @user.name %><br>
                <%= @user.email %>
              </v-list-item-title>
              <v-list-item-subtitle>Engineer</v-list-item-subtitle>
            </v-list-item-content>
          </v-list-item>
        </v-col>
      </v-row>
    </v-img>
  </v-card>
</template>
</div>




    <div class="main user-show">
      <div class="container">
        <div class="user"> <img src="<%= " /user_images/#{@user.image_name} " %>">
          <h2>
            <%= @user.name %>
          </h2>
          <p>
            <%= @user.email %>
          </p>
          <% if @user.id == @current_user.id %>
            <%= link_to("編集", "/users/#{@user.id}/edit") %>
              <% end %>
        </div>
        <% @user.posts.each do |post| %>
          <div class="posts-index-item">
            <div class="post-left"> <img src="<%= " /user_images/#{post.user.image_name} " %>"> </div>
            <div class="post-right">
              <div class="post-user-name">
                <%= link_to(post.user.name, "/users/#{post.user.id}") %>
              </div>
              <%= link_to(post.content, "/posts/#{post.id}",{class:"sent"}) %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
</body>
</html>


  <script src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js"></script>
  <script>
    new Vue({
      el: '#user',
      vuetify: new Vuetify(),
    })



  </script>