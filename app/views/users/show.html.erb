<html>
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'users' %>
      <%= stylesheet_link_tag    'normalize'%>
        <%= javascript_include_tag 'users.js' %>
      <%= javascript_include_tag 'top.js' %>
  <script src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.min.css" rel="stylesheet">
</head>

<body>

<div class="enginner-bg-<%= current_user.bg_color_id %>">
  <div class="body_dottedline">
  <div class="body_">
                  <div class="header-nav-container">
                      <nav class="header-nav">
                          <ul>
                                <li class="main-menu">                          
                                  <%= link_to "トップページ","/top" %>
                                </li>
                                <li class="main-menu">
                                  <%= link_to "チャットルーム", "/posts/index" %>                                                                     
                                </li>
                                <li class="main-menu">                                              
                                  <%= link_to "動画一覧", "/videos" %>
                                </li>
                                <li class="main-menu">
                                  <%= link_to "新規登録", 'signup' %>
                                </li>

                                <li class="main-menu">
                                  <%= link_to "設定", "/tasks/configuration" %>
                                </li>
                          </ul>
                      </nav>
                  </div>
  
              <div class="header-article-sp">
                  <div class="header-container">
                      <div class="menu-open-button">
                          <div class="menu-trigger">
                              <span></span>
                              <span></span>
                              <span></span>
                          </div>
                      </div>
                      
                  </div>


<div class="container-">
  <main class="main">
    <!-- メインコンテンツ -->
  
  <div class=show>

<div id="user">
<template>
  <v-card
    class="mx-auto"
    width="534"
    tile
  >
    <v-img
      height="100%"
      src="/assets/server-room.jpg"
    >
      <v-row
        align="end"
        class="fill-height"
      >
        <v-col
          align-self="start"
          class="pa-0"
          cols="12"
        >
          <v-avatar
            class="profile"
            color="grey"
            size="164"
            tile
          >
            <v-img src="<%= " /user_images/#{@user.image_name} " %>"></v-img>
          </v-avatar>
        </v-col>
        <v-col class="py-0">
          <v-list-item
            color="rgba(0, 0, 0, .4)"
            dark
          >
            <v-list-item-content>
              <v-list-item-title class="title">
                <%= @user.name %><br>
                <%= @user.email %>
              </v-list-item-title>
              <v-list-item-subtitle>Engineer</v-list-item-subtitle>
            </v-list-item-content>
          </v-list-item>
        </v-col>
      </v-row>
    </v-img>
  </v-card>
</template>
</div>




    <div class="main user-show">
      <div class="container">
        <div class="user"> <img src="<%= " /user_images/#{@user.image_name} " %>">
          <h2>
            <%= @user.name %>
          </h2>
          <p>
            <%= @user.email %>
          </p>
          <% if @user.id == @current_user.id %>
            <%= link_to("編集", "/users/#{@user.id}/edit") %>
              <% end %>
        </div>
        <% @user.posts.each do |post| %>
          <div class="posts-index-item">
            <div class="post-left"> <img src="<%= " /user_images/#{post.user.image_name} " %>"> </div>
            <div class="post-right">
              <div class="post-user-name">
                <%= link_to(post.user.name, "/users/#{post.user.id}") %>
              </div>
              <%= link_to(post.content, "/posts/#{post.id}",{class:"sent"}) %>
            </div>
          </div>
          <% end %>
      </div>
    </div>



  </main>
  <div class="sidebar-bg-<%= current_user.bg_color_id %>">
    <div class="sidebar__item">


      <!-- 中身 -->
    </div>
    <div class="sidebar__item sidebar__item--fixed">

  <ul>
    <% if @current_user %>
            <li>
           <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
            </li>
             <li><%= link_to "トップ","/top" %></li>     
            <li font-size:11px;><%= link_to("プロフィール","/users/#{@current_user.id}/edit",{class:"file"}) %></li>
            <li><%= link_to("ログアウト", "/logout", {method: :post}) %></li>          
          <li><%= link_to("チャットルーム", "/posts/index") %></li>
           <li><%= link_to("動画一覧", "/videos") %></li>
           <li><%= link_to("設定", "/tasks/configuration") %></li>
             <% else %>

            <li><%= link_to("新規登録", "/signup") %></li>
            <li><%= link_to("ログイン", "/login") %></li>
            <li><%= link_to("簡単ログイン", "/guest_login") %></li>
             <% end %>
  </ul>
      <!-- 固定・追従させたいエリア -->
    </div>
  </div>
</div>
</div>
  <script>
    new Vue({
      el: '#user',
      vuetify: new Vuetify(),
    })



  </script>
</body>
</html>




  