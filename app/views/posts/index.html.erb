<!DOCTYPE html>
<html>
<!-- Head -->
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Yasuhiro's Portfolio</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'posts' %>
  <%= stylesheet_link_tag 'normalize'%>
  <%= javascript_include_tag 'posts.js' %>
</head>
<body>
  <!-- ヘッダー部分読み込み  -->
  <%= render partial: '/template/header' %>
    <!-- -->
    <div class="wallpaper">
    
        <div class="container">
          <% @posts.each do |post| %>
            <div class="posts-index-item">
              <div class="post-left"> <img src="<%= " /user_images/#{post.user.image_name} " %>"> </div>
              <div class="post-right">
                <div class="post-user-name">
                    
                  <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                </div>
                <%= link_to(post.content, "/posts/#{post.id}",{class:"sentence"}) %>
              </div>
              <% end %>
                <%= paginate @posts %>
            </div>
        </div>
    </div>
    </div>

    <%= form_tag("/posts/create") do %>
      <div class="form">
        <div class="form-body"> <textarea name="content"></textarea> <input type="submit" value="投稿"> </div>
      </div>
      <% end %>
</body>
</html>